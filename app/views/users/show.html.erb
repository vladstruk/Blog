<h3> User <%= @user.name %> <h3>

<%= form_for @user, url: user_path(@user) do |f| %>
  Id: <%= f.label @user.id %> </br>
  Name: <%= f.label @user.name %> </br>
  Email: <%= f.label @user.email %> </br>
  Role: <%= f.select :role, User::ROLES, selected: @user.role %> </br>
  <%= f.submit %>
<% end %>

