<h4> Create new category </h4>
<%= form_for @category, url: admin_categories_path do |f| %>
  <%= f.label :name %> </br>
  <%= f.text_field :name %> </br>
  <%= f.submit %>
<% end %>

<% if @categories.present? %>
  <h4> Articles categories </h4>
  <table class="table table-striped">
    <th> Id </th>
    <th> Name </th>
    <% @categories.each do |category| %>
      <tr>
        <td> <%= category.id %> </td>
        <td> <%= category.name %> </td>
      </tr>
    <% end %>
  </table>
<% end %>